<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.vmarquet.bartendr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- the activity shown at startup -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- the activity with the list of article categories -->
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- the activity with the list of articles in a category previously selected -->
        <activity
            android:name=".CategoryActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- the activity to display information about an article -->
        <activity
            android:name=".ArticleActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- the activity to display the list of articles before order -->
        <activity
            android:name=".OrderActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
